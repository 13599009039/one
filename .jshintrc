{
  "// JSHint 配置文件": "用于前端JavaScript代码静态检查",
  "// 项目": "爱佳快计财务系统",
  "// 创建时间": "2026-02-12",
  
  "// 环境配置": "",
  "browser": true,
  "devel": true,
  "jquery": false,
  
  "// ES版本": "",
  "esversion": 6,
  
  "// 严格模式": "",
  "strict": false,
  "globalstrict": false,
  
  "// 全局变量": "",
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true,
    "fetch": true,
    "Promise": true,
    "db": true,
    "api": true,
    "showNotification": true,
    "openModal": true,
    "closeModal": true
  },
  
  "// 代码规范": "",
  "bitwise": true,
  "camelcase": false,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "freeze": true,
  "immed": true,
  "indent": 4,
  "latedef": "nofunc",
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "nonbsp": true,
  "nonew": true,
  "plusplus": false,
  "quotmark": false,
  "undef": true,
  "unused": "vars",
  "maxparams": 6,
  "maxdepth": 5,
  "maxstatements": 50,
  "maxcomplexity": 15,
  
  "// 放宽的规则": "",
  "asi": false,
  "boss": false,
  "debug": false,
  "eqnull": true,
  "evil": false,
  "expr": true,
  "funcscope": false,
  "iterator": false,
  "lastsemic": false,
  "laxbreak": false,
  "laxcomma": false,
  "loopfunc": false,
  "multistr": false,
  "notypeof": false,
  "proto": false,
  "scripturl": false,
  "shadow": false,
  "sub": true,
  "supernew": false,
  "validthis": false,
  "noyield": false
}
