    <div id="switchCompanyModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden modal z-50">
        <div class="relative top-20 mx-auto p-6 border w-full max-w-2xl shadow-lg rounded-lg bg-white">
            <div class="flex justify-between items-center mb-4 pb-4 border-b">
                <h3 class="text-xl font-bold text-gray-900">
                    <i class="fas fa-exchange-alt mr-2 text-blue-600"></i>切换公司
                </h3>
                <button type="button" onclick="closeSwitchCompanyModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div class="mb-4">
                <p class="text-sm text-gray-600">选择要切换到的公司，切换后页面将自动刷新。</p>
            </div>
            <div id="companyList" class="space-y-3 max-h-96 overflow-y-auto">
                <!-- 公司列表将通过JS动态生成 -->
                <div class="text-center text-gray-500 py-8">
                    <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
                    <p>加载中...</p>
                </div>
            </div>
            <div class="flex justify-end space-x-2 pt-4 border-t mt-4">
                <button type="button" onclick="closeSwitchCompanyModal()"
                        class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        取消
                </button>
            </div>
        </div>
    </div>

    <!-- 角色权限分配模态框 -->
    <div id="rolePermissionsModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden modal z-50">
        <div class="relative top-10 mx-auto p-6 border w-full max-w-4xl shadow-lg rounded-lg bg-white">
            <div class="flex justify-between items-center mb-4 pb-4 border-b">
                <h3 id="rolePermissionsModalTitle" class="text-xl font-bold text-gray-900">
                    <i class="fas fa-shield-alt mr-2 text-blue-600"></i>分配权限
                </h3>
                <button type="button" id="closeRolePermissionsModal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div id="permissionsTreeContainer" class="max-h-96 overflow-y-auto border rounded-lg p-4 bg-gray-50">
                <!-- 权限树将通过JS动态生成 -->
                <div class="text-center text-gray-500 py-8">
                    <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
                    <p>加载中...</p>
                </div>
            </div>
            <div class="flex justify-end space-x-2 pt-4 border-t mt-4">
                <button type="button" onclick="window.permissionAdmin && window.permissionAdmin.saveRolePermissions && window.permissionAdmin.saveRolePermissions()"
                        id="saveRolePermissionsBtn"
                        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                    保存
                </button>
                <button type="button" onclick="document.getElementById('rolePermissionsModal').classList.add('hidden')"
                        class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    取消
                </button>
            </div>
        </div>
    </div>

    <!-- 创建/编辑角色模态框 -->
    <div id="createRoleModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden modal z-50">
        <div class="relative top-20 mx-auto p-6 border w-full max-w-lg shadow-lg rounded-lg bg-white">
            <div class="flex justify-between items-center mb-4 pb-4 border-b">
                <h3 id="createRoleModalTitle" class="text-xl font-bold text-gray-900">
                    <i class="fas fa-user-tag mr-2 text-blue-600"></i>新增角色
                </h3>
                <button type="button" onclick="closeCreateRoleModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            
            <form id="createRoleForm" onsubmit="return saveRole(event)">
                <input type="hidden" id="roleId" value="">
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        角色名称 <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="roleName" 
                           required
                           placeholder="例如：财务专员"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        角色代码 <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="roleCode" 
                           required
                           pattern="[a-z_]+"
                           placeholder="例如：financial_staff（仅小写字母和下划线）"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <p class="mt-1 text-xs text-gray-500">只能包含小写字母和下划线</p>
                </div>
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        角色描述
                    </label>
                    <textarea id="roleDescription" 
                              rows="3"
                              placeholder="描述该角色的职责和权限范围"
                              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                </div>
                
                <div class="flex justify-end space-x-2 pt-4 border-t">
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        保存
                    </button>
                    <button type="button" 
                            onclick="closeCreateRoleModal()"
                            class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        取消
                    </button>
                </div>
            </form>
        </div>
    </div>

<!-- ========== 新增订单模态框 ========== -->
<div id="addOrderModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center p-4 hidden modal" style="z-index: 9999;">
    <div class="relative shadow-lg rounded-md bg-white overflow-hidden" style="width: 1100px; height: 749px; display: flex; flex-direction: column;">
        <!-- 模态框标题栏（固定） -->
        <div class="flex justify-between items-center px-4 py-2 border-b bg-white flex-shrink-0">
            <h3 class="text-base font-bold text-gray-900"><i class="fas fa-file-invoice mr-2 text-blue-600"></i>创建新订单</h3>
            <button type="button" class="text-gray-400 hover:text-gray-500 close-modal" onclick="closeAddOrderModal()">
                <span class="text-2xl">&times;</span>
            </button>
        </div>
        
        <form id="orderForm" class="flex flex-col flex-1 overflow-hidden" style="min-height: 0;">
            <!-- ① 顶部固定区：基本信息 + 人员配置 -->
            <div class="flex-shrink-0 px-4 py-3 bg-gray-50 border-b border-gray-200">
                <!-- 第一行：选择客户、下单日期、业务人员、负责团队、归属项目 -->
                <div class="grid grid-cols-5 gap-3 mb-2">
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">选择客户 <span class="text-red-500">*</span></label>
                        <div class="relative">
                            <input type="text" id="orderCustomerSearch" class="w-full border border-gray-300 rounded py-1.5 px-2 pr-8 text-xs h-[30px]" placeholder="搜索客户..." autocomplete="off">
                            <input type="hidden" id="orderCustomer" name="customer_id" required>
                            <button type="button" onclick="showQuickAddCustomer()" class="absolute right-0.5 top-0.5 bottom-0.5 px-1.5 text-xs bg-blue-600 text-white rounded hover:bg-blue-700" title="新建">
                                <i class="fas fa-plus"></i>
                            </button>
                            <div id="customerSearchDropdown" class="hidden absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded shadow-lg max-h-48 overflow-y-auto"></div>
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">下单日期 <span class="text-red-500">*</span></label>
                        <input type="date" id="orderDate" name="order_date" class="w-full border border-gray-300 rounded py-1.5 px-2 text-xs h-[30px]" required>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">业务人员 <span class="text-red-500">*</span></label>
                        <select id="orderBusinessStaff" class="w-full border border-gray-300 rounded py-1.5 px-2 text-xs h-[30px]" required>
                            <option value="">请选择</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">负责团队 <span class="text-red-500">*</span></label>
                        <select id="orderTeam" class="w-full border border-gray-300 rounded py-1.5 px-2 text-xs h-[30px]" required>
                            <option value="">请选择</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">归属项目</label>
                        <select id="orderProject" class="w-full border border-gray-300 rounded py-1.5 px-2 text-xs h-[30px]">
                            <option value="">请选择</option>
                        </select>
                    </div>
                </div>
                <!-- 第二行：服务人员、运营人员 -->
                <div class="grid grid-cols-5 gap-3">
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">服务人员</label>
                        <select id="orderServiceStaff" class="w-full border border-gray-300 rounded py-1.5 px-2 text-xs h-[30px]">
                            <option value="">请选择</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">运营人员</label>
                        <select id="orderOperationStaff" class="w-full border border-gray-300 rounded py-1.5 px-2 text-xs h-[30px]">
                            <option value="">请选择</option>
                        </select>
                    </div>
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>

            <!-- ② 中间滚动区：商品/服务项目列表 -->
            <div class="flex-1 overflow-y-auto px-4 py-3" style="min-height: 150px;">
                <div class="flex items-center justify-between mb-2">
                    <h4 class="text-xs font-semibold text-gray-500 flex items-center">
                        <i class="fas fa-shopping-cart text-green-500 mr-1"></i>商品/服务项目
                    </h4>
                    <div class="flex space-x-2">
                        <button type="button" onclick="openSelectProductsModal()" class="text-xs text-green-600 font-medium hover:text-green-800 bg-green-50 px-3 py-1 rounded border border-green-200">
                            <i class="fas fa-list mr-1"></i>选择商品
                        </button>
                        <button type="button" onclick="addOrderItem()" class="text-xs text-blue-600 font-medium hover:text-blue-800 bg-blue-50 px-3 py-1 rounded border border-blue-200">
                            <i class="fas fa-plus mr-1"></i>添加项目
                        </button>
                    </div>
                </div>
                <div class="bg-gray-50 rounded p-2">
                    <table class="w-full text-xs">
                        <thead>
                            <tr class="text-xs text-gray-500">
                                <th class="text-center py-1" style="width: 30%">商品/服务</th>
                                <th class="text-center py-1" style="width: 12%">类型</th>
                                <th class="text-center py-1" style="width: 12%">数量</th>
                                <th class="text-center py-1" style="width: 15%">单价</th>
                                <th class="text-center py-1" style="width: 15%">金额</th>
                                <th class="text-center py-1" style="width: 8%"></th>
                            </tr>
                        </thead>
                        <tbody id="orderItemsList">
                            <tr class="order-item-row border-t border-gray-200">
                                <td class="py-1">
                                    <select class="order-item-select w-full border border-gray-300 rounded py-1 px-2 text-xs" onchange="updateOrderItemPrice(this)" tabindex="1">
                                        <option value="">请选择...</option>
                                    </select>
                                </td>
                                <td class="py-1 order-item-type text-xs text-gray-500 text-center">-</td>
                                <td class="py-1"><input type="number" class="order-item-quantity w-full border border-gray-300 rounded py-1 px-2 text-xs text-center" value="1" min="1" onchange="calculateOrderItemTotal(this)" tabindex="2"></td>
                                <td class="py-1"><input type="number" step="0.01" class="order-item-price w-full border border-gray-300 rounded py-1 px-2 text-xs text-right" value="0" onchange="calculateOrderItemTotal(this)" tabindex="3"></td>
                                <td class="py-1 order-item-total text-xs text-right font-medium">¥0.00</td>
                                <td class="py-1 text-center"><button type="button" onclick="removeOrderItem(this)" class="text-red-500 hover:text-red-700 text-xs" tabindex="-1"><i class="fas fa-trash-alt"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                    <!-- 商品汇总（跟随滚动） -->
                    <div class="flex justify-end items-center text-xs mt-2 pt-2 border-t border-gray-300">
                        <span class="mr-4">商品数量: <span id="orderItemsTotalCount" class="font-bold text-gray-700">0</span> 件</span>
                        <span>总金额: <span id="orderItemsTotalAmount" class="font-bold text-blue-600">¥0.00</span></span>
                        <span id="orderItemsTotalCost" class="hidden">¥0.00</span>
                        <span id="orderItemsTotalProfit" class="hidden">¥0.00</span>
                    </div>
                </div>
            </div>

            <!-- ③ 底部固定区：成本、议价、汇总、按钮 -->
            <div class="flex-shrink-0 px-4 py-3 bg-gray-50 border-t border-gray-200">
                <!-- 成本区域（两列布局：稳定成本 + 特殊成本）固定高度128px -->
                <div class="grid grid-cols-2 gap-3 mb-2" style="height: 128px;">
                    <!-- 稳定必要成本（模板勾选） -->
                    <div class="p-2 bg-orange-50 rounded border border-orange-200 flex flex-col" style="height: 100%; overflow: hidden;">
                        <div class="flex items-center justify-between mb-1 flex-shrink-0">
                            <span class="text-gray-700 font-medium text-xs">📋 稳定成本（模板）</span>
                            <span class="text-xs text-orange-600 font-medium">合计: <span id="stableCostsTotal">¥0.00</span></span>
                        </div>
                        <div id="stableCostsList" class="space-y-1" style="flex: 1; min-height: 0; overflow-y: auto;">
                            <div class="text-xs text-gray-500 text-center py-1">加载中...</div>
                        </div>
                    </div>
                    <!-- 特殊一次性成本（手动录入） -->
                    <div class="p-2 bg-purple-50 rounded border border-purple-200 flex flex-col" style="height: 100%; overflow: hidden;">
                        <div class="flex items-center justify-between mb-1 flex-shrink-0">
                            <span class="text-gray-700 font-medium text-xs">💎 特殊成本（一次性）</span>
                            <div class="flex items-center gap-2">
                                <span class="text-xs text-purple-600 font-medium">合计: <span id="specialCostsTotal">¥0.00</span></span>
                                <button type="button" onclick="addSpecialCostRow()" class="text-xs bg-purple-500 hover:bg-purple-600 text-white px-1.5 py-0.5 rounded">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div id="specialCostsList" class="space-y-1" style="flex: 1; min-height: 0; overflow-y: auto;">
                            <div class="text-xs text-gray-500 text-center py-1">暂无特殊成本</div>
                        </div>
                    </div>
                </div>
                <!-- 议价 + 金额汇总（合并为一行） -->
                <div class="flex items-center justify-between text-xs p-2 bg-blue-50 rounded mb-2">
                    <!-- 左侧：议价输入 -->
                    <div class="flex items-center gap-2">
                        <span class="text-gray-700 font-medium whitespace-nowrap">💰 议价:</span>
                        <label class="flex items-center">
                            <span class="mr-1 whitespace-nowrap">加/减</span>
                            <input type="number" id="negotiationAmount" class="w-16 border border-gray-300 rounded py-1 px-1 text-xs text-right" value="0" step="0.01" onchange="onNegotiationAmountChange()">
                            <span class="ml-0.5">元</span>
                        </label>
                        <span class="text-gray-400">|</span>
                        <label class="flex items-center">
                            <span class="mr-1 whitespace-nowrap">百分比</span>
                            <input type="number" id="negotiationPercent" class="w-12 border border-gray-300 rounded py-1 px-1 text-xs text-right" value="0" step="0.1" onchange="onNegotiationPercentChange()">
                            <span class="ml-0.5">%</span>
                        </label>
                        <span class="text-gray-400">|</span>
                        <label class="flex items-center">
                            <span class="mr-1 whitespace-nowrap">成交价</span>
                            <input type="number" id="finalPriceInput" class="w-20 border border-gray-300 rounded py-1 px-1 text-xs text-right" value="0" step="0.01" onchange="onFinalPriceChange()">
                            <span class="ml-0.5">元</span>
                        </label>
                    </div>
                    <!-- 右侧：金额汇总 -->
                    <div class="flex items-center gap-2">
                        <span>优惠: <span id="orderDiscountAmount" class="font-bold text-red-600">¥0.00</span></span>
                        <span class="text-gray-300">|</span>
                        <span>销售额: <span id="orderFinalAmount" class="font-bold text-blue-700">¥0.00</span></span>
                        <span class="text-gray-300">|</span>
                        <span>成本: <span id="orderFinalCost" class="font-bold text-orange-700">¥0.00</span></span>
                        <span class="text-gray-300">|</span>
                        <span>利润: <span id="orderFinalProfit" class="font-bold text-green-700">¥0.00</span></span>
                        <span class="text-gray-500">(<span id="orderProfitRate">0%</span>)</span>
                    </div>
                </div>
                <!-- 操作按钮 -->
                <div class="flex justify-end space-x-2 pt-2 border-t border-gray-200">
                    <button type="button" onclick="closeAddOrderModal()" class="bg-white py-1.5 px-4 border border-gray-300 rounded text-sm font-medium text-gray-700 hover:bg-gray-50">取消</button>
                    <button type="submit" id="orderSubmitBtn" class="bg-blue-600 py-1.5 px-4 border border-transparent rounded text-sm font-medium text-white hover:bg-blue-700">创建订单</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- ========== 选择商品模态框 ========== -->
<div id="selectProductsModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center p-4 hidden" style="z-index: 10000;">
    <div class="bg-white rounded-lg shadow-xl" style="width: 800px; max-height: 70vh; display: flex; flex-direction: column;">
        <div class="flex justify-between items-center px-4 py-3 border-b bg-gray-50">
            <h3 class="text-base font-bold text-gray-900"><i class="fas fa-boxes mr-2 text-green-600"></i>选择商品/服务</h3>
            <button type="button" onclick="closeSelectProductsModal()" class="text-gray-400 hover:text-gray-600 text-xl">&times;</button>
        </div>
        <div class="p-4 flex-1 overflow-hidden flex flex-col" style="min-height: 0;">
            <!-- 搜索栏 -->
            <div class="mb-3 flex items-center gap-2">
                <input type="text" id="productSearchInput" class="flex-1 border border-gray-300 rounded py-1.5 px-3 text-sm" placeholder="搜索商品名称或拼音首字母..." oninput="filterProductsList()">
                <span class="text-xs text-gray-500">已选 <span id="selectedProductsCount" class="text-blue-600 font-bold">0</span> 项</span>
            </div>
            <!-- 商品列表 -->
            <div class="flex-1 overflow-y-auto border rounded" style="min-height: 0;">
                <table class="w-full text-xs">
                    <thead class="bg-gray-100 sticky top-0">
                        <tr>
                            <th class="py-2 px-3 text-left w-8"><input type="checkbox" id="selectAllProducts" onchange="toggleSelectAllProducts()"></th>
                            <th class="py-2 px-3 text-left">商品名称</th>
                            <th class="py-2 px-3 text-left w-20">类型</th>
                            <th class="py-2 px-3 text-right w-24">供货价</th>
                            <th class="py-2 px-3 text-right w-24">销售价</th>
                            <th class="py-2 px-3 text-center w-20">状态</th>
                        </tr>
                    </thead>
                    <tbody id="productsListBody">
                        <!-- 动态填充 -->
                    </tbody>
                </table>
            </div>
        </div>
        <div class="flex justify-end space-x-2 px-4 py-3 border-t bg-gray-50">
            <button type="button" onclick="closeSelectProductsModal()" class="px-4 py-1.5 text-sm border rounded text-gray-700 hover:bg-gray-100">取消</button>
            <button type="button" onclick="confirmSelectProducts()" class="px-4 py-1.5 text-sm bg-green-600 text-white rounded hover:bg-green-700">
                <i class="fas fa-check mr-1"></i>确认添加
            </button>
        </div>
    </div>
</div>

</body>
</html>