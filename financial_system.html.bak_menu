    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== 系统启动 ===');
            
            // 初始化模板加载器
            if (window.TemplateLoader && window.TemplateLoader.init) {
                console.log('[Main] 开始加载模板...');
                window.TemplateLoader.init()
                    .then(() => {
                        console.log('[Main] 模板加载完成');
                        
                        // 模板加载后检查合同签署函数
                        checkContractFunctions();
                        
                        // ✅ 架构升级 v1.1 - 初始化订单页面
                        if (typeof initOrdersPage === 'function') {
                            console.log('[Main] 初始化订单页面...');
                            initOrdersPage();
                        } else if (typeof window.initOrdersPage === 'function') {
                            console.log('[Main] 使用window.initOrdersPage初始化...');
                            window.initOrdersPage();
                        } else {
                            console.warn('[Main] initOrdersPage 函数未找到，创建备用函数');
                            // 创建openAddOrderModal备用函数
                            window.openAddOrderModal = function() {
                                console.log('[备用] 打开创建订单模态框...');
                                const modal = document.getElementById('addOrderModal');
                                if (modal) {
                                    modal.classList.remove('hidden');
                                    modal.style.display = 'flex';
                                    modal.style.visibility = 'visible';
                                    modal.style.opacity = '1';
                                    modal.style.zIndex = '10000';
                                    console.log('[备用] 模态框已显示');
                                } else {
                                    console.error('[备用] addOrderModal元素不存在!');
                                    alert('模态框未加载，请刷新页面');
                                }
                            };
                        }
                    })
                    .catch(error => {
                        console.error('[Main] 模板加载失败', error);
                    });
            } else {
                console.warn('[Main] TemplateLoader未加载');
            }
        });
        
        // 检查并备用定义合同签署函数
        function checkContractFunctions() {
            if (typeof window.openSignContractModal !== 'function') {
                console.warn('⚠️ openSignContractModal未定义，创建备用函数');
                window.openSignContractModal = function(orderId) {
                    const today = new Date().toISOString().split('T')[0];
                    document.getElementById('signContractOrderId').value = orderId;
                    document.getElementById('signContractNumber').value = '';
                    document.getElementById('signContractDate').value = today;
                    document.getElementById('signContractStatus').value = '服务中';
                    const modal = document.getElementById('signContractModal');
                    modal.classList.remove('hidden');
                    modal.style.display = 'flex';
                    setTimeout(() => {
                        document.getElementById('signContractNumber').focus();
                    }, 100);
                };
            }
            
            if (typeof window.markNoContractRequired !== 'function') {
                console.warn('⚠️ markNoContractRequired未定义，创建备用函数');
                window.markNoContractRequired = async function(orderId) {
                    if (!confirm('确认标记此订单为“无需合同”？')) return;
                    try {
                        const response = await fetch(`/api/orders/${orderId}`, {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                no_contract_required: true,
                                contract_number: null,
                                contract_sign_date: null
                            })
                        });
                        const result = await response.json();
                        if (result.success) {
                            alert('已标记为无需合同');
                            if (typeof window.viewOrder === 'function') window.viewOrder(orderId);
                            if (typeof window.loadOrdersData === 'function') window.loadOrdersData();
                        } else {
                            alert(`操作失败：${result.message}`);
                        }
                    } catch (error) {
                        console.error('标记无需合同错误:', error);
                        alert('操作失败，请检查网络连接');
                    }
                };
            }
            
            if (typeof window.closeSignContractModal !== 'function') {
                window.closeSignContractModal = function() {
                    const modal = document.getElementById('signContractModal');
                    modal.classList.add('hidden');
                    modal.style.display = 'none';
                };
            }
            
            if (typeof window.saveContractSign !== 'function') {
                window.saveContractSign = async function() {
                    const orderId = document.getElementById('signContractOrderId').value;
                    const contractNumber = document.getElementById('signContractNumber').value.trim();
                    const signDate = document.getElementById('signContractDate').value;
                    const status = document.getElementById('signContractStatus').value;
                    
                    if (!contractNumber) {
                        alert('请输入合同编号');
                        return;
                    }
                    if (!signDate) {
                        alert('请选择签署日期');
                        return;
                    }
                    
                    try {
                        const response = await fetch(`/api/orders/${orderId}`, {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                contract_number: contractNumber,
                                contract_sign_date: signDate,
                                status: status,
                                no_contract_required: false
                            })
                        });
                        const result = await response.json();
                        if (result.success) {
                            alert(`合同签署成功！\n合同编号：${contractNumber}`);
                            if (typeof window.closeSignContractModal === 'function') window.closeSignContractModal();
                            if (typeof window.viewOrder === 'function') window.viewOrder(orderId);
                            if (typeof window.loadOrdersData === 'function') window.loadOrdersData();
                        } else {
                            alert(`合同签署失败：${result.message}`);
                        }
                    } catch (error) {
                        console.error('签署合同错误:', error);
                        alert('签署失败，请检查网络连接');
                    }
                };
            }
            
            console.log('✅ 合同签署函数检查完成');
        }
    </script>
